
<% if @house.errors.any? %>

      <h2><%= pluralize(@house.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @house.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>

  <% end %>
<%= form_with(model: @house, local: true) do |form| %> 
<div class="container">  
  <div class="row">
    <div class="col-md-2">
      <%= form.label :House_Type %>
    </div>
    <div class="col-md-10">
     <%= form.select :house_type, options_from_collection_for_select(House.select(:house_type).distinct, :house_type, :house_type), {:class=>'form-control', :onchange => "myFunction(this.value);"} %>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col-md-2">
     <%= form.label :Category %>
    </div>
    <div class="col-md-10">
     <%= form.select :category, options_from_collection_for_select(House.select(:category).distinct, :category, :category), {:class=>'form-control', :onchange => "myFunction(this.value);"} %>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col-md-2">
      <%= form.label :Square_Feet %>
    </div>
    <div class="col-md-10">
      <%= form.text_field :square_feet, placeholder: "1000 sq.ft" %>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col-md-2">
      <%= form.label :Amount %>
    </div>
    <div class="col-md-10">
      <%= form.text_field :amount %>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col-md-2">
      <%= form.label :House_Image %>
    </div>
    <div class="col-md-10">
      <%= form.file_field :images, multiple: true %><br><br>
    </div>
  </div>

  <br>
  
  <div class="row">
    <div class="col-md-1">
      
    </div>
    <div class="col-md-11">
    <button type="submit" class="btn btn-outline-primary">Add Address</button>
      <%#= form.submit :Add_Address %>
    </div>
  </div>
<% end %>         
<br>
<%= link_to 'Back', houses_path %>
</div>