<% if @house.user_id == current_user.id %>
  <%= form_with(model: @house, local: true) do |form| %> 
    <div class="container">  
      <div class="row">
        <div class="col-md-2">
         <%= form.label :House_Type %>
        </div>
        <div class="col-md-10">
          <%= form.select :house_type, House::House_types %>
        </div>
      </div>
      
      <br>
      <div class="row">
        <div class="col-md-2">
          <%= form.label :Category %>
        </div>
        <div class="col-md-10">
          <%= form.select :category, House::Categories %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-2">
          <%= form.label :Square_Feet %>
        </div>
        <div class="col-md-10">
          <%= form.text_field :square_feet %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-2">
          <%= form.label :Amount %>
        </div>
        <div class="col-md-10">
          <%= form.text_field :amount %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-2">
          <%= form.label :Reserved %>
        </div>
        <div class="col-md-10">
          <%= form.radio_button(:reserved,false) %>
          <%= form.label ("false")  %>
          <%= form.radio_button(:reserved,true) %>
          <%= form.label ("true")  %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-2">
          <%= form.label :House_Image %>
        </div>
        <div class="col-md-10">
          <%= form.file_field :images, multiple: true %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-1">
        </div>
        <div class="col-md-11">
          <%= form.submit :edit_address %>
        </div>
      </div>
    <% end %>  
  <% end %>       
  <br>
  <%= link_to 'Back', houses_path %>
</div>
