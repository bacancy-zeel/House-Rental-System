<!DOCTYPE html>
<html>
  <head>
    <title>HouseRentalSystem</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2-bootstrap-theme/0.1.0-beta.10/select2-bootstrap.min.css" rel="stylesheet" />
  </head>

  <body>
   <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <h2><b> House Rental</h2>
            <ul class="nav pull-right">
          
                <li><%= link_to 'Home',  root_path, class: "nav-item nav-link" %></li>
                <li><%= link_to ' Post House', houses_path, class: "nav-item nav-link" %></li>
                <% if current_user %>
                  <% if current_user.has_role? :admin %>
                    <li><%= link_to 'Approval', not_approved_path, class: "nav-item nav-link" %></li>
                  <% end %>
                  
                  <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "btn btn-outline-primary" %></li>
                <% else %>
                  <li><%= link_to 'Sign In', user_session_path, class: "btn btn-outline-primary" %></li>
                <% end %>
     
            </ul>
            </nav>
    
          
      <div class="container">
 
    <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
      <br><br>
    <%= yield %>
  </div>
  </div>
  </body>
</html>
